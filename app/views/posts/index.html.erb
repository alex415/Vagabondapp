<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>All Posts</h1>
    <hr>
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <h4>
          <%= post.title %>
          <span class="pull-right">
            <%= link_to "View Post", post_path(post), class: "btn btn-default pull-right" %>
          </span>
        </h4>
        <p><%= post.body %></p>
        <hr>
      <% end %>
    <% else %>
      <p>No posts yet!</p>
      <hr>
    <% end %>

    <% if current_user %>
      <%= link_to "Submit New Post", new_post_path, class: "btn btn-default" %>
    <% end %>
  </div>
</div>