<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
    
    <h1><strong><%= @post.title %></strong></h1>
    <h3><%= @post.city.name%></h3>
    <h4>Posted by: <%= @post.user.name %></h4>
    <hr>
    <p><%= @post.body %></p>
    <% if current_user && current_user.posts.include?(@post) %>
      <hr>
      <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-primary" %>
      <%= link_to "Delete Post", post_path(@post), method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>

