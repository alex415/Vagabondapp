<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit Post</h1>
		<%= form_for @post do |f| %>
		  <div class="form-group">
		    <%= f.text_field :title, placeholder: "Title", autofocus: true, class: "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.text_field :body, placeholder: "Body", class: "form-control" %>
		  </div>
		  <%= f.submit "Save Post", class: "btn btn-default" %>
		<% end %>
	</div>
</div>