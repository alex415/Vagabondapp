<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit Recipe</h1>
		<%= form_for @recipe do |f| %>
		  <div class="form-group">
		    <%= f.text_field :name, placeholder: "Name", autofocus: true, class: "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.text_field :instructions, placeholder: "Instructions", class: "form-control" %>
		  </div>
		  <%= f.submit "Save Recipe", class: "btn btn-default" %>
		<% end %>
	</div>
</div>