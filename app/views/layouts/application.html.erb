<!DOCTYPE html>
<html>
<head>
  
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- bootstrap css cdn -->
	<link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/yeti/bootstrap.min.css" rel="stylesheet">

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

  <title>Vagabond App</title>
</head>
<body>

	<!-- navbar -->
	<nav class="navbar navbar-default navbar-static-top" role="navigation">
		<div class="container">
	    	<div class="navbar-header">
	    		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	    			<span class="sr-only">Toggle navigation</span>
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    		</button>
	    		<a class="navbar-brand" href="/">Vagabond</a>
	    	</div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1"> 
	    		<ul class="nav navbar-nav navbar-right">
	    			<!-- buttons to show if no user -->
	    			<% if current_user %>
	    				
	    				<!-- button if user logs in -->
	    				<li display: "inline"><a href="/logout">Log out</a></li>
	    			<% else %>
		    			<li display: "inline"><a href="/signup">Sign up</a></li>
		    			<li display: "inline"><a href="/login">Log in</a></li>
		    			
		    		<% end %>
	    			
	    		</ul>
	    	</div>
		</div>
	</nav> 
	<!-- end of navbar -->

	<div class="container text-center">
		<% flash.each do |name, msg| %>
		    <%= content_tag :div, msg, class: "alert #{name == 'error' ? 'alert-danger' : 'alert-info'}" %>
		<% end %>
	</div>

	<%= yield %>

</body>
</html>
