<!DOCTYPE html>
<html>
<head>
 
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- bootstrap css cdn -->
	<link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/yeti/bootstrap.min.css" rel="stylesheet">

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	
	<%= csrf_meta_tags %>

  <title>Vagabond App</title>
  
</head>
<body>

	<!-- navbar -->
	<nav class="navbar navbar-default navbar-static-top" role="navigation">
		<div class="container">
	    	<div class="navbar-header">
	    		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    		</button>
	    		<a href="/" class="navbar-brand" >Vagabond</a>
	    	</div>
			<div class="collapse navbar-collapse"> 
	    		<ul class="nav navbar-nav navbar-right">
	    			<% if current_user %>
	    			<!-- button if user logs in -->
	    				<li display: "inline"><a href="/posts/new">New Post</a></li>
	    				<li display: "inline"><a href="/profile">Profile</a></li>
	    				<li display: "inline"><a href="/logout">Log out</a></li>
	    				
	    			<% else %>
	    				<!-- buttons to show if no user -->
		    			<li display: "inline"><a href="/signup">Sign up</a></li>
		    			<li display: "inline"><a href="/login">Log in</a></li>
		    		<% end %>	
	    		</ul>
	    	</div>
		</div>
	</nav> 
	<!-- end of navbar -->

	<div class="container text-center">
		<% flash.each do |name, msg| %>
		    <%= content_tag :div, msg, class: "alert #{name == 'error' ? 'alert-danger' : 'alert-info'}" %>
		<% end %>
	</div>

	<%= yield %>

<!-- jQuery -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<!-- bootstrap js -->
 <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<!-- GMaps API -->
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
